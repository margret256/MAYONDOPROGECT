const mongoose = require("mongoose");

const saleSchema = new mongoose.Schema({
  customer: { 
    type: String,
     required: true },
  product: { 
    type: String,
     required: true },
  qty: {
     type: Number, 
     required: true },
  price: {
     type: Number, 
     required: true },
  payment: { 
    type: String,
     required: true },
  agent: {
     type: String, 
     required: true },
  date: {
     type: Date, 
     required: true },
  transport: { 
    type: String, 
    enum: ["yes", "no"], 
    default: "no" },
  total: { 
    type: Number, 
    required: true }
}, { timestamps: true });

module.exports = mongoose.model("Sale", saleSchema);
