doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Add Sale | Mayondo Wood & Furniture
    link(rel='stylesheet' href='/CSS/style.css')
  body
    header
      h1 Add Sale
      nav
        ul.nav-links
          li
            a(href='/admin-dashboard') Dashboard
          li
            a(href='/inventory') Inventory
          li
            a(href='/sales') Sales
          li
            a(href='/stock') Stock
          li
            a(href='/logout') Logout
    main.form-container
      .form-box
        h2 Enter Sale Details
        form(action='/add-sales' method='POST')
          label(for='customer') Customer Name:
          input#customer(type='text' name='customer' required='')
          label(for='product') Product:
          input#product(type='text' name='product' required='')
          label(for='qty') Quantity:
          input#qty(type='number' name='qty' required='')
          label(for='price') Price per Item:
          input#price(type='number' name='price' required='')
          label(for='payment') Payment Type:
          select#payment(name='payment' required='')
            option(value='Cash') Cash
            option(value='Cheque') Cheque
            option(value='Bank Transfer') Bank Transfer
            option(value='Overdraft') Overdraft
          label(for='transport') Include Transport:
          select#transport(name='transport' required='')
            option(value='no') No
            option(value='yes') Yes (Add 5%)
          label(for='agent') Sales Agent:
          input#agent(type='text' name='agent' required='')
          label(for='date') Date of Sale:
          input#date(type='date' name='date' required='')
          p
            strong Total:
            span#totalprice Shs. 0.00
          button.btn(type='submit') Save Sale
    footer
      p &copy; 2025 Mayondo Wood & Furniture Ltd
    script(src='/js/add-sales.js')
