doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sales | Mayondo Wood & Furniture
    link(rel='stylesheet' href='/CSS/style.css')
  body
    header
      h1 Sales Records
      nav
        ul.nav-links
          li
            a(href='/admin-dashboard') Dashboard
          li
            a(href='/inventory') Inventory
          li
            a(href='/add-sales') Add Sale
          li
            a(href='/stock') Stock
          li
            a(href='/logout') Logout
    main.sales-page
      h2 Sales Records
      table#salesTable(border='1')
        thead
          tr
            th Customer
            th Product
            th Quantity
            th Date
            th Payment
            th Agent
            th Transport
            th Total
            th Actions
        tbody#salesBody
          if sales.length === 0
            tr
              td(colspan='9') No sales recorded.
          else
            each sale in sales
              tr
                td= sale.customer
                td= sale.product
                td= sale.qty
                td= sale.date.toISOString().split('T')[0]
                td= sale.payment
                td= sale.agent
                td= sale.transport === 'yes' ? '5% Transport' : 'No'
                td Shs. #{sale.total.toFixed(2)}
                td
                  //- Edit as a link styled like a button
                  a(href=`/sales/edit/${sale._id}` style='display:inline-block; gap:10px; padding:3px 8px; margin-right:5px; background-color:#4CAF50; color:white; border-radius:3px; text-decoration:none; font-size:12px; font-weight:bolder; line-height:1; text-align:center; cursor:pointer') ‚úèÔ∏è Edit
                  //- Delete as a form button
                  form(action=`/sales/delete/${sale._id}` method='POST' style='display:inline')
                    button(type='submit' style='display:inline-block; padding:3px 8px; background-color:#f44336; color:white; border-radius:3px; font-size:12px; font-weight:bolder; line-height:1; text-align:center; cursor:pointer') üóëÔ∏è Delete
    footer
      p &copy; 2025 Mayondo Wood & Furniture Ltd
